<odoo>
    <data>
        <template id="vit_financial_statements.index" name="index">
            <t t-call="website.layout">
                
                <t t-call="vit_financial_statements.file_form"/>


                <!-- <h2>Financial Statements</h2> -->
                <div style="margin:20px 0;"></div>
                <div class="easyui-layout" style="width:100%;height:100%; min-height: 500px">

                    <!-- <div data-options="region:'center',split:true" title="File Browser" style="width:50%;"> -->
                        <t t-call="vit_financial_statements.file_browser"/>
                    <!-- </div> -->

                </div>
                <script>
                    var selectedFileId=null;
                </script>
            </t>
         </template>

        <template id="vit_financial_statements.file_browser">
             <table id="tt" class="easyui-treegrid" style="width:100%;height:100%"
                    data-options="
                        url: '/financial/data',
                        method: 'get',
                        rownumbers: false,
                        idField: 'id',
                        treeField: 'name'
                    ">
                 <thead>
                     <tr>
                        <th data-options="field:'name'" width="80%">Name</th>
                        <th data-options="field:'balance'" width="20%">Balance</th>
                     </tr>
                 </thead>

             </table>
        </template>
        <template id="vit_financial_statements.file_form">
     
           
                    <div style="margin:20px;" class="d-flex justify-content-center">
                        <input class="easyui-datebox" label="&#160;Start Date:" style="width:30%;" />
                        <!-- <p style="color:white">...</p> -->
                        <input class="easyui-datebox" label="&#160;End Date:" style="width:30%;" />
                    </div>
                    <div style="margin:20px;" class="d-flex justify-content-center">
                        <select class="easyui-combobox" name="Company" label="&#160;Company :" style="width:30%">
                            <option value="PaL">My Company</option>
                            <option value="BS">Companyku</option>
                        </select>
                        <select class="easyui-combobox" name="Report" label="&#160;Report :" style="width:30%">
                            <option value="PaL">Profit and Loss</option>
                            <option value="BS">Balance Sheet</option>
                        </select>
                    </div>
               
        </template>



    </data>
</odoo>